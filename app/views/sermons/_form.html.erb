

    <div class='col-lg-7'>
        <%= @user.last_name %>
        
        <%= form_with model: @sermon do |f| %>
        <div class="form-group">
            <%= f.label "Title"%>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label 'Scriptures'%>
            <%= f.text_field :scriptures, columns: "6", 'data-role'=>'tagsinput', class: 'form-control'%>
        </div>
        
        <div class="form-group">
            <%= f.label "Article"%>
            <%= f.text_area :body, class: 'form-control', rows:"6" %>
        </div>
     <div class='col-lg-4'>
        <div class="form-group">
            <%= f.label "Featured Image"%>
            <%= f.file_field  :avatar, class: 'form-control'  %>
        </div>
        <div class="form-group">
             <%= f.label "Status"%>
            <%= fields_for :post_status do |status| %>
                <%= status.select  :status_name,  status_select_options, class: 'form-control'%>
            <%end%>
        </div>
    </div>
    <div class = 'col-md-12'>
    <br>
         <%= f.submit class:"btn btn-default" %>
         
    </div>
    <%end%>
  
    

    

</div>