<div class="container">
  <p id="notice"><%= notice %></p>
 
  
  <div class="col-lg-12">

  
      <h1>Sermons</h1>

        
        <% @sermons.each do |sermon| %>
        
        <div class='col-lg-4'>
          <div class='panel panel-default article-panel'> 
                  
              <h3 class= 'panel-heading'><%= link_to sermon.title, sermon_path(sermon) %></h3>
            
                <%= link_to (image_tag Faker::Avatar.image("sample piccture", "200x200", "jpg")), sermon_path(sermon)  %>
              <div class='panel-body'>
                <p><strong> <%= sermon.scriptures.truncate(10) %></strong></p>
                <p><%= sermon.body.truncate(200) %></p>
              </div>
          
              <%= link_to 'Read More..', sermon_path(sermon) %>
              <br/>
            </div>
        </div> 
            
          <% end %>
          
      
      <%= will_paginate @posts %>
    </div>
</div> 
    
  
    
     
 