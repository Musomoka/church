<p id="notice"><%= notice %></p>
<div class="container">

 <button type="button" class="btn btn-link"><%root_path%></button>
<h1>Listing People</h1>
 
    <% @people.each do |person| %>
    
    <div class="col-md-10"> 
 
      <div class="row">
           <div class="col-md-2"> 
          <%=image_tag person.picture.url(:small) %>
          </div>
       
        <div class="col-md-3">
          <tbody>  
          <tr>
            <td><%= person.name %></td>
            <br>
            <td><%= person.title %></td>
            <br>
            <td><%= person.description %></td>
            <br>
            <td><%= link_to 'Show', person %></td>
            <td><%= link_to 'Edit', edit_person_path(person) %></td>
            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          </div>
         
          </tbody>
      </div>
      </div>
    <% end %>



<br>


</div>
</div>