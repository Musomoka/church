<div class='container'>
    <div class = 'col-md-10'>
    
           
        <%unless @comments.nil?%> 

         <%  @comments.each do |comment|%>
            <div class="row">
                <div class="col-sm-1">
                   
                    <!-- /thumbnail -->
                </div>
                <!-- /col-sm-1 -->

                <div class="col-sm-7">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong> <%=commentable.user.email%> </strong>
                            <span class="text-muted">
                                <%=distance_of_time_in_words_to_now(comment.created_at)%>
                            </span>
                        </div>
                        <div class="panel-body">
                            <%= comment.body%>
                        </div>
                        <!-- /panel-body -->
                    </div>
                    <!-- /panel panel-default -->
                </div>
                <!-- /col-sm-5 -->

            </div>
            
        <%end%>  
        <%else%>
        
        <div class = 'warning'>
         <p>No Comments </p>
        </div>
        <%end%>
        <div class= 'col-lg-offset-3'>
           
        
        </div>

    </div>

</div>
 