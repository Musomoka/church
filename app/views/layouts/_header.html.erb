
<title><%= yield(:title) %> | Church.com</title>
<nav class="navbar navbar-default">

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  <%if logged_in?%>
    <a class="navbar-brand" href="#"><%=current_user.email%> </a>
    <%else%>
    <%= link_to 'Church.com',static_pages_home_url, class:"navbar-brand"%>
  <%end%>
 
    <ul class="nav navbar-nav">
      
      <li>
        <%= link_to 'Sermons',sermons_url, class:"navbar-brand"%>
      </li>
      <li>
        <%= link_to 'People',people_url, class:"navbar-brand"%>
      </li>
      <li>
        <%= link_to 'About',static_pages_about_url, class:"navbar-brand"%>
      </li>
      <li>
        <%= link_to 'contact',static_pages_contacts_url, class:"navbar-brand"%>
      </li>
      <li></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if logged_in? %>

            <li><%= link_to "Users", users_path %></li>
            <li>
              <%= link_to "Profile", current_user %>
            </li>
            <li>
              <%= link_to "Settings", edit_user_path(current_user) %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: :delete, data: { confirm: 'Are you sure?' }%>
             
           
           

      <% else %>
          <li>
            <%= link_to "Log in", login_url %>
          </li>
          <li>
            <%= link_to "Signup", new_user_path%>
          </li>

      <% end %>
    </ul>

  </div>
  <!-- /.collapse navbar-fluid -->
</nav>



</div>
</div>
<div class='container'>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>">
      <%= message %>
    </div>
    <% end %>

</div>